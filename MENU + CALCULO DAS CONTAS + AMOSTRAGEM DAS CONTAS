		switch(op){
			case 1:
				subMenu1();
				break;
			case 2:
				subMenu2();
				break;	
			case 3:
				cout << "Saindo do programa. AtÃ© logo!" << endl;
				break;		
			default:
				cout << "invalido";
				break;				
		}
	}while(op != 3);
}


